{
	"bsonType": "object",
	"required": ["hotel_id", "count", "name"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"hotel_id": {
			"description": "酒店id",
			"bsonType": "string"
		},
		"createTime": {
			"description": "创建时间",
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"count": {
			"description": "房型房间数量",
			"bsonType": "int",
			"minimum": 1,
			"defaultValue": 1
		},
		"area": {
			"description": "面积",
			"bsonType": "int",
			"minimum": 1,
			"defaultValue": 20
		},
		"name": {
			"description": "房型名称",
			"bsonType": "string"
		},
		"roomList": {
			"description": "房间列表",
			"bsonType": "array"
		},
		"firstImages": {
			"description": "首图",
			"bsonType": "string",
			"defaultValue": "https:\/\/env-00jxhfhjd231.normal.cloudstatic.cn\/HM\/images\/app.png"
		},
		"imagesList": {
			"description": "图片列表",
			"bsonType": "array",
			"defaultValue": []
		},
		"guestNumber": {
			"description": "入住人数量",
			"bsonType": "int",
			"minimum": 1,
			"defaultValue": 1
		},
		"isWindow": {
			"description": "是否有窗",
			"bsonType": "bool",
			"defaultValue": true
		},
		"bedList": {
			"description": "床位",
			"bsonType": "array",
			"defaultValue": []
		},
		// "disposableToiletries": {
		// 	"description": "洗漱用品",
		// 	"bsonType": "bool",
		// 	"defaultValue": false
		// },
		"facility": {
			"description": "设施",
			"bsonType": "array"
		},
		"priceBase":{
			"bsonType": "object",
			"properties":{
				"name":{
					"description": "价格名目",
					"bsonType": "string",
					"defaultValue":"基础价格"
				},
				"price":{
					"description": "价格",
					"bsonType": "double",
					"defaultValue":0
				}
			}
		},
		"priceA":{
			"bsonType": "object",
			"properties":{
				"name":{
					"description": "价格名目",
					"bsonType": "string",
					"defaultValue":"套餐价格A"
				},
				"price":{
					"description": "价格",
					"bsonType": "double",
					"defaultValue":0
				}
			}
		},
		"priceB":{
			"bsonType": "object",
			"properties":{
				"name":{
					"description": "价格名目",
					"bsonType": "string",
					"defaultValue":"套餐价格B"
					
				},
				"price":{
					"description": "价格",
					"bsonType": "double",
					"defaultValue":0
				}
			}
		},
		"dataStatus": {
			"description": "数据是否有效",
			"bsonType": "int",
			"defaultValue": 1
		}
	}
}