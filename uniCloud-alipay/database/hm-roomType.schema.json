{
	"bsonType": "object",
	"required": ["hotel_id", "count", "name"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"hotel_id": {
			"description": "酒店id",
			"bsonType": "string"
		},
		"createTime": {
			"description": "创建时间",
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"count": {
			"description": "房型房间数量",
			"bsonType": "int",
			"minimum": 1,
			"defaultValue": 1
		},
		"name": {
			"description": "房型名称",
			"bsonType": "string"
		},
		"roomList": {
			"description": "房间列表",
			"bsonType": "array"
		},
		"firstImages":{
			"description": "首图",
			"bsonType": "string"
		},
		"imagesList":{
			"description": "图片列表",
			"bsonType": "array",
			"defaultValue":[]
		},
		"guestNumber":{
			"description": "入住人数量",
			"bsonType": "int",
			"minimum": 1,
			"defaultValue": 1
		},
		"bedList":{
			"description": "床位",
			"bsonType": "array",
			"defaultValue":[]
		},
		"disposableToiletries":{
			"description": "洗漱用品",
			"bsonType": "bool",
			"defaultValue":false
		},
		"dataStatus": {
			"description": "数据是否有效",
			"bsonType": "int",
			"defaultValue": 1
		}
	}
}